{
  "hosting": {
    "public": "dist/ux",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers" : [{
        "source": "**/*.@(js|svg|css|woff2|gif|png)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=7200"
        } ]
      }
    ],
    "rewrites": [
      {
        "source": "/the-bed-shop-ldn/us-central1/feed",
        "function": "feed"
      },
      {
        "source": "/the-bed-shop-ldn/us-central1/updateEmail",
        "function": "updateEmail"
      },
      {
        "source": "/the-bed-shop-ldn/us-central1/paypal/pay",
        "function": "paypal"
      },
      {
        "source": "/the-bed-shop-ldn/us-central1/paypal/process",
        "function": "paypal"
      },
      {
        "source": "/the-bed-shop-ldn/us-central1/admin/**",
        "function": "admin"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
